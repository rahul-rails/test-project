<%= form_with(model: play, local: true, remote: true) do |form| %>
  <% if play.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(play.errors.count, "error") %> prohibited this play from being saved:</h2>

      <ul>
        <% play.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <h1>
      <span id="timer_val" name="timer_val"> Timer will begin soon...</span>
      <%= hidden_field_tag :timer_val%>
    </h1>
    <%= image_tag "", id: "image_url", name: "image_url", size: "400x300" %>

  </div>

  <div class="actions">
    <%= form.submit id: "create-play"%>
  </div>

  <div id="play-records">
    <%= render partial: 'play_table' %>
  </div>
<% end %>
